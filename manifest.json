{
  "manifest_version": 2,
  "name": "Skribbl Typo",
  "description": "Collection of useful tools & graphics tablet support for skribbl.io and sketchful.io",
  "version": "18.5.1",
  "author": "tobeh",
  "icons": {
    "128": "res/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{0b67dc2f-1517-451c-b5cb-8b28270b03e6}",
      "update_url": "https://tobeh.host/typo/firefox/updates.json"
    }
  },
  "browser_action": {
    "default_title": "Skribbl Typo",
    "default_icon": "res/icon128.png",
    "title": "Dashboard",
    "default_popup": "popup/popup.html"
  },
  "web_accessible_resources": [
    "gamePatch.js",
    "jmin.js",
    "res/*",
    "gifCap/*"
  ],
  "permissions": [
    "activeTab",
    "*://www.tobeh.host/*",
    "webRequest"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://skribbl.io/",
        "*://skribbl.io/*"
      ],
      "js": [
        "jmin.js",
        "commands.js",
        "gifCap/LZWEncoder.js",
        "gifCap/NeuQuant.js",
        "gifCap/GIFEncoder.js",
        "gifCap/skribblCanvas.js",
        "gifCap/b64.js",
        "service.js",
        "sprites.js"
      ]
    },
    {
      "run_at": "document_start",
      "matches": [
        "*://skribbl.io/",
        "*://skribbl.io/*"
      ],
      "js": [
        "report.js",
        "lobbies.js",
        "patcher.js"
      ]
    },
    {
      "matches": [
        "*://sketchful.io/",
        "*://sketchful.io/*"
      ],
      "js": [
        "sketchful/sketchfulReport.js"
      ]
    }
  ]
}
